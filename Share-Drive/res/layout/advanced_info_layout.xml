<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    
        android:background="@drawable/radialback">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Advanced information"
            android:textColor="#FFF"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="18dip"
            android:text="Photo"
            android:textColor="#FFF" />

        <ImageView
            android:id="@+id/details_imgPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/img_user_photo" />

        <TextView
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="18dip"
            android:text="Phone Number"
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/details_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_phone"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="18dip"
            android:text="Country"
            android:textColor="#FFF" />

        <Spinner
            android:id="@+id/details_countries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

        <TextView
             android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#FFF" />

        <Spinner
            android:id="@+id/details_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
        <!--
    <TextView
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:textColor="#FFF" />

    <EditText
        android:id="@+id/details_state"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/img_city"
        android:hint="@string/enter_your_state" />
        -->

        <ImageView
            android:id="@+id/details_Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_update" />

        <TextView
            android:id="@+id/txtGoBack"
            android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:paddingTop="10dp"
            android:text="@string/_go_back"
            android:textColor="#FFF" />
    </LinearLayout>

</ScrollView>