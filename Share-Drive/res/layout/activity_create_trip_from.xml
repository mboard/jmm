<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/radialback" >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".CreateTripFrom" >

        <TextView
            android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Country"
            android:textColor="#FFF" />

        <Spinner
            android:id="@+id/from_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

        <TextView
             android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From City"
            android:textColor="#FFF" />

        <Spinner
            android:id="@+id/from_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

        <TextView
             android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Address"
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_address"
            android:hint="@string/enter_start_address"
            android:singleLine="true" />

        <TextView
             android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Date"
            android:textColor="#FFF" />

        <DatePicker
            android:id="@+id/from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/from_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:src="@drawable/btn_next" />
        
    </LinearLayout>

</ScrollView>